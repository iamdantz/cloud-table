---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Cloud Table - A comprehensive comparison of AWS, Azure, and Google Cloud services for various use cases."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={Astro.url} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Cloud Table - A comprehensive comparison of AWS, Azure, and Google Cloud services for various use cases."
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta
      property="twitter:description"
      content="Cloud Table - A comprehensive comparison of AWS, Azure, and Google Cloud services for various use cases."
    />
    <script is:inline>
      // Theme persistence
      const theme = localStorage.getItem("theme") || "light";
      document.documentElement.setAttribute("data-theme", theme);
    </script>
  </head>
  <body class="bg-base-100 text-base-content">
    <div class="drawer md:drawer-open">
      <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col">
        <!-- Navbar for Theme Toggle -->
        <div
          class="w-full navbar bg-base-100 md:hidden border-b border-base-200 min-h-[4rem]"
        >
          <div class="flex-none">
            <label
              for="my-drawer-2"
              class="btn btn-square btn-ghost drawer-button"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                class="inline-block w-6 h-6 stroke-current"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path></svg
              >
            </label>
          </div>
          <div class="flex-1 px-2 mx-2 font-bold text-lg">Cloud Table</div>
          <div class="flex-none">
            <!-- Theme Toggle Mobile -->
            <label class="swap swap-rotate btn btn-ghost btn-circle">
              <input type="checkbox" class="theme-controller" value="dark" />
              <!-- sun icon -->
              <svg
                class="swap-off fill-current w-6 h-6"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                ><path
                  d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,5.64,7.05Zm13,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,18.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"
                ></path></svg
              >
              <!-- moon icon -->
              <svg
                class="swap-on fill-current w-6 h-6"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                ><path
                  d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"
                ></path></svg
              >
            </label>
          </div>
        </div>

        <!-- Page content here -->
        <slot />
      </div>
      <div class="drawer-side z-20">
        <label
          for="my-drawer-2"
          aria-label="close sidebar"
          class="drawer-overlay"></label>
        <slot name="sidebar" />
      </div>
    </div>
    <script>
      // Theme toggle logic
      const themeControllers = document.querySelectorAll(".theme-controller");
      const savedTheme = localStorage.getItem("theme") || "light";

      // Set initial state
      themeControllers.forEach((controller) => {
        (controller as HTMLInputElement).checked = savedTheme === "dark";
        controller.addEventListener("change", (e) => {
          const newTheme = (e.target as HTMLInputElement).checked
            ? "dark"
            : "light";
          document.documentElement.setAttribute("data-theme", newTheme);
          localStorage.setItem("theme", newTheme);
          // Sync other controllers
          themeControllers.forEach((c) => {
            if (c !== e.target)
              (c as HTMLInputElement).checked = newTheme === "dark";
          });
        });
      });
    </script>
  </body>
</html>
